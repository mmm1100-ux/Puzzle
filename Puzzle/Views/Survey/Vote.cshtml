@model Survey
@{
    Layout = null;
}
<title>نظرسنجی | پازل</title>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<link href="~/lib/StarRating/src/css/star-rating-svg.css" rel="stylesheet" />
<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>
<script src="~/lib/StarRating/src/jquery.star-rating-svg.js"></script>

<div class="LoginPage">
    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="container" style="position:absolute; top:50%; right:50%; transform:translate(50%,50%); padding:0px 30px;">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-10" style="position:absolute; top:50%; transform:translate(50%,-50%); right:50%; margin-top:0px;">
            <div class="FormBox col-lg-12 col-md-12 col-sm-12 col-xs-12" style="margin-top:0px; padding:35px;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="text-align:center; color:#222328; margin-top:37px;">
                    <h4 style="font-size:28px; margin-bottom:9px;">ثبت نظر</h4>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="FormDiv col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label asp-for="Vote">امتیاز</label>
                    <div class="my-rating"></div>
                    <input asp-for="Vote" hidden />
                </div>
                <div class="FormDiv col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <label asp-for="Description">انتقاد و پیشنهاد:</label>
                    <textarea asp-for="Description" class="VoteTextarea"></textarea>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <button type="submit" class="btn btn-primary col-lg-12 col-md-12 col-sm-12 col-xs-12">ثبت</button>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
    $(".my-rating").starRating({
        starSize: 40,
        disableAfterRate: false,
        useFullStars: true,
        callback: function (currentRating, $el) {
            $('#Vote').val(currentRating);
        }
    });

    $('.my-rating').starRating('setRating', 1)
</script>